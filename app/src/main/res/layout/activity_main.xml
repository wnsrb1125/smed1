<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="5"
                    android:orientation="vertical"
                  android:background="@drawable/gas">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
        android:layout_weight="1">

            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                           android:layout_height="100dp"
                           android:layout_marginLeft="30dp"
                           android:layout_marginTop="50dp"
                           android:id="@+id/b1"
                           android:src="@drawable/f1"
                           android:scaleType="fitCenter"
        />
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b2"
                         android:src="@drawable/f2"
                         android:scaleType="fitCenter"
            />
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b3"
                         android:src="@drawable/f3"
                         android:scaleType="fitCenter"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1">
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b4"
                         android:src="@drawable/f4"
                         android:scaleType="fitCenter"
            />
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b5"
                         android:src="@drawable/f5"
                         android:scaleType="fitCenter"
            />
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b6"
                         android:src="@drawable/f6"
                         android:scaleType="fitCenter"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1">
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b7"
                         android:src="@drawable/f7"
                         android:scaleType="fitCenter"
            />
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b8"
                         android:src="@drawable/f8"
                         android:scaleType="fitCenter"
            />
            <ImageButton android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="100dp"
                         android:layout_marginLeft="30dp"
                         android:layout_marginTop="50dp"
                         android:id="@+id/b9"
                         android:src="@drawable/f9"
                         android:scaleType="fitCenter"
            />
        </LinearLayout>



    </LinearLayout>

       <LinearLayout android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:orientation="horizontal"
                    >
           <LinearLayout android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="5">
               <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:text="insert seconds"
                       android:id="@+id/time"
                       android:textSize="25dp"
               />
           </LinearLayout>

           <LinearLayout android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="5">
               <Button android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:text="PLAY"
                       android:textSize="25dp"
                       android:id="@+id/play"/>

           </LinearLayout>

       </LinearLayout>








</LinearLayout>
